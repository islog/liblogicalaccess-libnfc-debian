										<argument>/p:Platform=x64</argument>
										<argument>/t:Build</argument>
									</arguments>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>cmake-Win32-debug</id>
								<phase>compile</phase>
								<configuration>
									<executable>scripts/GenerateWin32Solutions-debug.bat</executable>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>build-Win32-debug</id>
								<phase>compile</phase>
								<configuration>
									<arguments>
										<argument>INSTALL.vcxproj</argument>
										<argument>/p:Configuration=Debug</argument>
										<argument>/p:Platform=Win32</argument>
										<argument>/t:Build</argument>
									</arguments>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>cmake-x64-debug</id>
								<phase>compile</phase>
								<configuration>
									<executable>scripts/GenerateX64Solutions-debug.bat</executable>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>build-x64-debug</id>
								<phase>compile</phase>
								<configuration>
									<arguments>
										<argument>INSTALL.vcxproj</argument>
										<argument>/p:Configuration=Debug</argument>
										<argument>/p:Platform=x64</argument>
										<argument>/t:Build</argument>
									</arguments>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>compile</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<exec executable="scripts/postbuild.bat">
											<arg value="${islog.ISLOGSign}" />
											<arg value="install/bin" />
										</exec>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<profile>
			<!-- IncrediBuild -->
			<id>build-incredibuild</id>
			<activation>
				<property><name>islog.dgbuild</name></property>
			</activation>
	
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.2.1</version>
						<configuration>
							<executable>BuildConsole</executable>
						</configuration>
						<executions>
							<execution>
								<id>cmake-Win32</id>
