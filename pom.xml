								<configuration>
									<executable>scripts/GenerateX64Solutions.bat</executable>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>build-x64</id>
								<phase>compile</phase>
								<configuration>
									<arguments>
										<argument>liblogicalaccess-libnfc.sln</argument>
										<argument>/rebuild</argument>
										<argument>/prj=INSTALL</argument>
										<argument>/cfg="Release|x64"</argument>
									</arguments>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>build-x64-2</id>
								<phase>compile</phase>
								<configuration>
									<executable>msbuild</executable>
									<arguments>
										<argument>INSTALL.vcxproj</argument>
										<argument>/p:Configuration=Release</argument>
										<argument>/p:Platform=x64</argument>
										<argument>/t:Build</argument>
									</arguments>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>cmake-Win32-debug</id>
								<phase>compile</phase>
								<configuration>
									<executable>scripts/GenerateWin32Solutions-debug.bat</executable>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>build-Win32-debug</id>
								<phase>compile</phase>
								<configuration>
									<arguments>
										<argument>liblogicalaccess-libnfc.sln</argument>
										<argument>/rebuild</argument>
										<argument>/prj=INSTALL</argument>
										<argument>/cfg="Debug|Win32"</argument>
									</arguments>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>build-Win32-debug-2</id>
								<phase>compile</phase>
								<configuration>
									<executable>msbuild</executable>
									<arguments>
										<argument>INSTALL.vcxproj</argument>
										<argument>/p:Configuration=Debug</argument>
