								<id>clean-sln</id>
								<phase>clean</phase>
								<configuration>
									<successCodes>
										<successCode>1</successCode>
										<successCode>0</successCode>
									</successCodes>
									<arguments>
										<argument>INSTALL.vcxproj</argument>
										<argument>/p:Configuration=Release</argument>
										<argument>/t:Clean</argument>
									</arguments>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>clean-debug-sln</id>
								<phase>clean</phase>
								<configuration>
									<successCodes>
										<successCode>1</successCode>
										<successCode>0</successCode>
									</successCodes>
									<arguments>
										<argument>INSTALL.vcxproj</argument>
										<argument>/p:Configuration=Debug</argument>
										<argument>/t:Clean</argument>
									</arguments>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>cmake-Win32</id>
								<phase>compile</phase>
								<configuration>
									<executable>scripts/GenerateWin32Solutions.bat</executable>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>build-Win32</id>
								<phase>compile</phase>
								<configuration>
									<arguments>
										<argument>INSTALL.vcxproj</argument>
										<argument>/p:Configuration=Release</argument>
										<argument>/p:Platform=Win32</argument>
										<argument>/t:Build</argument>
									</arguments>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>cmake-x64</id>
