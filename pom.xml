			<version>1.80.0-SNAPSHOT</version>
			<scope>compile</scope>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>lib.portable</groupId>
			<artifactId>boost</artifactId>
			<version>1.57-light</version>
			<scope>compile</scope>
