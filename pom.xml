									<executable>scripts/GenerateWin32Solutions.bat</executable>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>build-Win32</id>
								<phase>compile</phase>
								<configuration>
									<arguments>
										<argument>liblogicalaccess-libnfc.sln</argument>
										<argument>/rebuild</argument>
										<argument>/prj=INSTALL</argument>
										<argument>/cfg="Release|Win32"</argument>
									</arguments>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>build-Win32-2</id>
								<phase>compile</phase>
								<configuration>
									<executable>msbuild</executable>
