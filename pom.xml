								</goals>
							</execution>
							<execution>
								<id>cmake-x64-debug</id>
								<phase>compile</phase>
								<configuration>
									<executable>scripts/GenerateX64Solutions-debug.bat</executable>
								</configuration>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
							<execution>
								<id>build-x64-debug</id>
								<phase>compile</phase>
								<configuration>
